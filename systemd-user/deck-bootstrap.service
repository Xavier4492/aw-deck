[Unit]
Description=StreamDeck bootstrap (page 0 -> page 1 when ready)
Wants=streamdeck-ui.service
After=streamdeck-ui.service graphical-session.target

[Service]
Type=oneshot
Environment=DISPLAY=:1
Environment=XAUTHORITY=%t/gdm/Xauthority
Environment=PATH=%h/.local/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin
ExecStart=%h/.local/bin/deck-bootstrap

[Install]
WantedBy=graphical-session.target
